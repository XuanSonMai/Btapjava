package Lesson70;

import java.io.File;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.StandardCopyOption;
import java.security.spec.ECFieldF2m;

public class Test {
	
	static void coppyAll(File f1, File f2)
	{
		
		try {
			int count=0;
			count ++;
			Files.copy(f1.toPath(), f2.toPath(),StandardCopyOption.REPLACE_EXISTING);
			System.out.println("Lan coppy tu "+count+"f2 la "+ f2);
			
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		if(f1.isDirectory())
		{
			File[] subFiles = f1.listFiles();
			for (File file : subFiles) {
				System.out.println("File con cua f1"+file);
				File newFile = new File(f2.getAbsoluteFile()+"\\"+file.getName()); // tao ra file con tuong ung 
				System.out.println("name : "+file.getName());
				
				coppyAll(file,newFile );
			}
		}
	}
	public static void main(String[] args) {
